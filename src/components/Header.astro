---
import HeaderLink from './HeaderLink.astro';
---

<header>
	<nav>
		<div class='internal-links'>
			<HeaderLink href='/'>Home</HeaderLink>
			<HeaderLink href='/blog'>Blog</HeaderLink>
		</div>
		<div class='lang-switch text-xs uppercase tracking-widest'>
			<a
				href='/blog/en/'
				class='px-2 underline decoration-dotted underline-offset-4'>EN</a
			>
			<span>/</span>
			<a
				href='/blog/es/'
				class='px-2 underline decoration-dotted underline-offset-4'>ES</a
			>
		</div>
		<div class='social-links'>
			<a
				href='https://www.linkedin.com/in/ernestomg'
				target='_blank'
				rel='noopener'
			>
				<span class='sr-only'>Connect on LinkedIn</span>
				<svg
					class='w-8 h-8'
					viewBox='0 0 30 30'
					fill='currentColor'
					aria-hidden='true'
					width='32'
					height='32'
