---
import ProjectCard from './ProjectCard.astro';
// Project preview images
import ImgTourism from '../assets/projects-preview/vis_project.webp';
import ImgMetro from '../assets/projects-preview/metro_project.webp';
import ImgNaics from '../assets/projects-preview/naics_project.webp';
import ImgMovies from '../assets/projects-preview/filmanin.webp';
import ImgPoke from '../assets/projects-preview/preview_pokecard_detector.webp';
import ImgU18 from '../assets/projects-preview/rank_u18_analysis.webp';
import ImgCalitimer from '../assets/projects-preview/calitimer.webp';
---

<section
	id='projects'
	class='w-full bg-gray-900 py-10 sm:py-12 md:py-16 lg:py-16 xl:py-20 px-4 sm:px-6 md:px-8'
>
	<div class='max-w-7xl mx-auto'>
		<header>
			<h2
				id='projects-title'
				class='text-5xl sm:text-6xl md:text-7xl lg:text-8xl xl:text-9xl font-space-grotesk font-black text-cyan-100 text-left mb-4 sm:mb-6 md:mb-8 lg:mb-10 xl:mb-12 uppercase tracking-tighter leading-tight drop-shadow-sm'
			>
				Projects
			</h2>
			<p class='mt-2 text-cyan-100 py-4'>
				Selected work across data, ML, and apps — practical builds that ship.
			</p>
		</header>

		<div class='grid grid-cols-1 md:grid-cols-2 xl:grid-cols-3 gap-6 md:gap-8'>
			<ProjectCard
				title='Tourism interactive dashboard'
				subtitle='Data visualization'
				description='Interactive dashboard exploring tourism metrics with rich charts and filters.'
				image={ImgTourism}
				ctaLabel='View project'
				ctaHref='https://github.com/andreucs/vis-proy'
				tags={['r', 'plotly', 'shiny']}
				accent='emerald'
				isExternal
			/>

			<ProjectCard
				title='Valencia transport analysis'
				subtitle='Urban mobility analytics'
				description='Exploratory data analysis and visualization of Valencia’s transport network.'
				image={ImgMetro}
				ctaLabel='View project'
				ctaHref='https://github.com/em4go/transport-analysis-proy-II'
				tags={['r', 'python', 'docker']}
				accent='cyan'
				isExternal
			/>

			<ProjectCard
				title='Business description classification'
				subtitle='NLP classification'
				description='Model that classifies company descriptions into industry/NAICS categories.'
				image={ImgNaics}
				ctaLabel='View project'
				ctaHref='https://github.com/Zrive/zrive-ds-1q24-industry-classification'
				tags={['python', 'scikitlearn', 'pytorch']}
				accent='purple'
				isExternal
			/>

			<ProjectCard
				title='Movie recommendation web'
				subtitle='Recommender system'
				description='Web app that recommends movies based on user preferences and ratings.'
				image={ImgMovies}
				ctaLabel='View project'
				ctaHref='https://github.com/em4go/filmanin_proy'
				tags={['python', 'scikitlearn', 'fastapi', 'htmx', 'docker']}
				accent='violet'
				isExternal
			/>

			<ProjectCard
				title='PokeCard TCG detector'
				subtitle='Computer vision'
				description='Real‑time detection of Pokémon TCG cards using a custom vision pipeline.'
				image={ImgPoke}
				ctaLabel='View project'
				ctaHref='https://github.com/em4go/PokeCard-TCG-detector'
				tags={['python', 'pandas', 'opencv', 'htmx', 'flask']}
				accent='emerald'
				isExternal
			/>

			<ProjectCard
				title='Under‑18 athletics ranking analysis'
				subtitle='Sports analytics'
				description='Analysis and ranking of U‑18 athletics performances with visual insights.'
				image={ImgU18}
				ctaLabel='View project'
				ctaHref='https://github.com/em4go/analisis-ranking-atletismo-2023'
				tags={['python', 'pandas', 'streamlit', 'plotly']}
				accent='violet'
				isExternal
			/>

			<ProjectCard
				title='Workout timer app'
				subtitle='Full‑stack app'
				description='Interval and workout timer application designed for simple daily routines.'
				image={ImgCalitimer}
				ctaLabel='View project'
				ctaHref='https://github.com/em4go/calitimer'
				tags={['javascript', 'svelte', 'pouchdb', 'css', 'html']}
				accent='cyan'
				isExternal
			/>
		</div>
	</div>
</section>
